    ViewData["Title"] = "Himalayan Expeditions";
}
@model IEnumerable<Expeditions.Models.Peak>

<div class="row">
    <div class="col">
        <div class="text-center">
            <img src="~/images/Mount_Everest_as_seen_from_Drukair2_PLW_edit.jpg" alt="Mount Everst as seen from Drukair2" width="1024" />
        </div>
    </div>
</div>
@*
    Your implementation here.  I will provide some html code for the home page at the exam.
*@
<div class="row">
    <div class="col">
        <h2 class="text-center">Climbing in the Himalaya</h2>
        <p class="text-center" id="stats">@*Put stats from AJAX question here*@</p>
        <table class="table table-dark table-striped table-sm w-75" style="margin: 0 auto;">
            <thead>
                <tr>
                    <th scope="col" style="text-align:center">Rank</th>
                    <th scope="col" style="text-align:center">Mountain</th>
                    <th scope="col">Height</th>
                    <th scope="col">First climbed</th>
                    <th scope="col"># of Expeditions</th>
                </tr>
            </thead>
            <tbody>
                @*
                @foreach (Peak p in Model)
                {

                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                        <td>@p.Height</td>
                        @if (String.IsNullOrEmpty(p.FirstAscentYear.ToString()))
                        {
                            <td>--</td>
                        }
                        else
                        {
                            <td>@p.FirstAscentYear</td>
                        }
                        <td>@p.Expeditions.Count</td>
                    </tr>
                }
                *@
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model.ElementAt(i).Name</td>
                        <td>@Model.ElementAt(i).Height</td>
                        @if (String.IsNullOrEmpty(@Model.ElementAt(i).FirstAscentYear.ToString()))
                        {
                            <td>--</td>
                        }
                        else
                        {
                            <td>@Model.ElementAt(i).FirstAscentYear</td>
                        }
                        <td>@Model.ElementAt(i).Expeditions.Count()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


